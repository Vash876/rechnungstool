{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm install && prisma generate && cd frontend && npm install && NODE_PATH=../node_modules npx vite build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
