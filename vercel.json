{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm install && prisma generate && cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
