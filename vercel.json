{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm ci && prisma generate && cd frontend && npm ci && npm run build-no-check",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm ci",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
